pipeline {
    agent any 
    stages {
        stage('Clone repo and clean it') {
            steps {
                sh "rm -rf MyPipeline_JAN"
                sh "git clone https://github.com/LuckyReddyGIT/MyPipeline_JAN.git"
                sh "mvn clean -f Pipeline"
            }
        }
        stage('Test') {
            steps {
                sh "mvn test -f MyPipeline_JAN"
            }
        }
        stage('Deploy') {
            steps {
                sh "mvn package -f MyPipeline_JAN"
            }
        }
    }
}